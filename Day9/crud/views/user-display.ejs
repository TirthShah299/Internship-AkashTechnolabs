<% if(db_rows_array.length > 0){ %>
    
    <h1>User Records</h1>
    <table border='1' >
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Gender</th>
            <th>E-mail</th>
            <th>Password</th>
            <th>Mobile No.</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
        <% for(var i = 0; i < db_rows_array.length; i++){ %>
            <tr>
                
                <td><%= db_rows_array[i].user_id %></td>
                <td><%= db_rows_array[i].user_name %></td>
                <td><%= db_rows_array[i].user_gender %></td>
                <td><%= db_rows_array[i].user_email %></td>
                <td><%= db_rows_array[i].user_password %></td>
                <td><%= db_rows_array[i].user_mobile %></td>
                <td><%= db_rows_array[i].user_address %></td>
                <td><a href="/users/user-edit/<%= db_rows_array[i].user_id %>"> Edit </a> | <a href="/users/delete/<%= db_rows_array[i].user_id %>"> Delete</a> </td>

            </tr>
            <%}%> 
        </table>
    
<% }else{ %>
<h1>No records found</h1><br><br>
<% } %>
